<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_teal_500</item>
        <item name="colorPrimaryDark">@color/color_teal_800</item>
        <item name="colorAccent">@color/color_orange_200</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RegisterImageViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">2.7dp</item>
        <item name="android:background">@color/color_gray</item>
        <item name="android:padding">@dimen/dp_10</item>
    </style>

    <style name="RegisterLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_48</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:layout_margin">@dimen/dp_8</item>
    </style>

    <style name="RegisterEditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">5</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="EditTextLogin">
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingLeft">@dimen/dp_2</item>
        <item name="android:paddingRight">@dimen/dp_2</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ImageViewLogin">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">@dimen/dp_8</item>
        <item name="android:paddingBottom">@dimen/dp_8</item>
        <item name="android:paddingRight">@dimen/dp_16</item>
        <item name="android:paddingLeft">@dimen/dp_16</item>
        <item name="android:background">@color/color_grey_200</item>
    </style>

    <style name="TextViewStatusPoll">
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_20</item>
    </style>

    <style name="LayoutManagerPoll">
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_48</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/dp_1</item>
    </style>

    <style name="EditTextManagerPoll">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ButtonActionManagerLink">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">@dimen/dp_10</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/color_teal_500</item>
    </style>

    <style name="EditTextManageActivity">
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingLeft">@dimen/dp_2</item>
        <item name="android:paddingRight">@dimen/dp_2</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="ButtonInfo">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_teal_500</item>
        <item name="android:paddingBottom">@dimen/dp_4</item>
        <item name="android:paddingLeft">@dimen/dp_4</item>
        <item name="android:paddingTop">@dimen/dp_4</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:layout_margin">@dimen/dp_2</item>
    </style>

    <style name="TextViewPollInformation">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_black_700</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/dp_4</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/dp_8</item>
    </style>

    <style name="AppThemeButton">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:background">@color/color_teal_500</item>
    </style>

    <style name="TextViewIntroduce">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
        <item name="android:layout_marginStart">@dimen/dp_10</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/sp_17</item>
    </style>

    <style name="ImageViewIntroduce">
        <item name="android:layout_width">@dimen/dp_50</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:layout_margin">@dimen/dp_5</item>
    </style>

    <style name="ImageViewItemVote">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_150</item>
    </style>

    <style name="ImageViewPageOption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/dp_8</item>
        <item name="android:background">@color/color_grey_200</item>
    </style>

    <style name="TitlePollTextView">
        <item name="android:textSize">@dimen/dp_16</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/dp_4</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/dp_8</item>
    </style>

    <style name="ButtonActionPollResult">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:layout_marginRight">@dimen/dp_20</item>
        <item name="android:layout_marginTop">@dimen/dp_5</item>
        <item name="android:background">@color/color_teal_500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_white</item>
    </style>
</resources>
