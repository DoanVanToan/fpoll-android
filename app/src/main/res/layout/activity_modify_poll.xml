<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="presenter"
            type="com.framgia.fpoll.ui.polledition.ModifyPollPresenter"/>

        <variable
            name="activity"
            type="com.framgia.fpoll.ui.polledition.ModifyPollActivity"/>

        <import type="com.framgia.fpoll.util.LayoutManageUtil"/>

        <import type="android.view.View"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/layout_toolbar"
            layout="@layout/partial_toolbar"/>

        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_8">

            <android.support.v7.widget.CardView
                android:id="@+id/card_continue"
                style="@style/FPollCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{()->presenter.onClickSave()}">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/FPollTextCardView"
                    android:text="@{activity.titleSave}"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_next"
                style="@style/FPollCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:onClick="@{()->presenter.onClickNext()}"
                android:visibility="@{activity.isShowNext ? View.VISIBLE : View.INVISIBLE}">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/FPollTextCardView"
                    android:text="@{activity.titleNext}"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/FPollCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_toLeftOf="@+id/card_next"
                android:layout_toStartOf="@+id/card_next"
                android:onClick="@{()->presenter.onClickPrevious()}"
                android:visibility="@{activity.isShowPrevious ? View.VISIBLE : View.INVISIBLE}">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/FPollTextCardView"
                    android:text="@{activity.titlePrevious}"/>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </LinearLayout>
</layout>
