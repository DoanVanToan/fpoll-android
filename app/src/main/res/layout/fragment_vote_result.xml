<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <variable
            name="handler"
            type="com.framgia.fpoll.ui.pollmanage.result.ResultActionHandler"/>

        <variable
            name="fragment"
            type="com.framgia.fpoll.ui.pollmanage.result.ResultVoteFragment"/>

        <import type="com.framgia.fpoll.util.LayoutManageUtil"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp_8">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layoutManager="@{LayoutManageUtil.linear()}"
            bind:bindAdapter="@{fragment.adapter}"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <android.support.v7.widget.CardView
                style="@style/FPollCardView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="@{() -> handler.exportPdf()}">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/FPollTextCardView"
                    android:text="@string/action_export_pdf"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/FPollCardView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="@{() -> handler.exportExcel()}">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/FPollTextCardView"
                    android:text="@string/action_export_excel"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</layout>
