<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
            name="emptyModel"
            type="com.framgia.fpoll.data.model.EmptyModel"
            />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_gray_500"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="@{emptyModel.visibility}"
        >

        <ImageView
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_120"
            android:layout_marginTop="@dimen/dp_50"
            bind:imageResource="@{emptyModel.image}"
            />
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:text="@{emptyModel.title}"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold"
            android:typeface="serif"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="@{emptyModel.subTitle}"
            android:textColor="@color/color_gray_800"
            android:textSize="@dimen/sp_18"
            android:typeface="sans"
            />

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:visibility="@{emptyModel.actionTitle != null? View.VISIBLE : View.GONE}"
            app:cardBackgroundColor="@color/color_orange_700"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> emptyModel.listenner.onActionClick()}"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_25"
                android:paddingRight="@dimen/dp_25"
                android:paddingTop="@dimen/dp_10"
                android:text="@{emptyModel.actionTitle}"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold"
                />
        </android.support.v7.widget.CardView>

    </LinearLayout>
</layout>
