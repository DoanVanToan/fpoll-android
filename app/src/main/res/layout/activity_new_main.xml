<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.framgia.fpoll.ui.mainstart.NewMainViewModel"
            />
    </data>
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <com.framgia.fpoll.widget.UnSwipeViewPager
                android:id="@+id/frame_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:offscreenPageLimit="@{viewModel.pageLimit}"
                bind:adapter="@{viewModel.viewPagerAdapter}"
                bind:currentFragment="@{viewModel.currentTab}"
                />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@android:color/transparent"
                bind:visibilityAnim="@{viewModel.isBottomNavigationShow ? View.VISIBLE : View.GONE}"
                >
                <LinearLayout
                    android:id="@+id/linear_bottom_navigation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:background="@color/color_grey_200"
                    android:orientation="horizontal"
                    >
                    <RelativeLayout
                        android:id="@+id/relative_home"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_selector_item_bottom"
                        android:gravity="center"
                        android:onClick="@{(view) ->viewModel.onBottomBarClick(view)}"
                        >
                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/image_home"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_bg_home"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/relative_join_poll"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_selector_item_bottom"
                        android:gravity="center"
                        android:onClick="@{(view) ->viewModel.onBottomBarClick(view)}"
                        >
                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/image_join_poll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_bg_join"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/relative_space"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        />
                    <RelativeLayout
                        android:id="@+id/relative_feedback"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_selector_item_bottom"
                        android:gravity="center"
                        android:onClick="@{(view) ->viewModel.onBottomBarClick(view)}"
                        >
                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/image_feedback"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_bg_feedback"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/relative_profile"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_selector_item_bottom"
                        android:gravity="center"
                        android:onClick="@{(view) ->viewModel.onBottomBarClick(view)}"
                        >
                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/image_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_bg_profile"
                            />
                    </RelativeLayout>
                </LinearLayout>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_grey_400"
                    />
            </FrameLayout>
        </LinearLayout>

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/image_create_poll"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_60"
            android:layout_gravity="bottom|center"
            android:background="@drawable/bg_state_item_center_navigation"
            android:onClick="@{()->viewModel.onStartPollCreate()}"
            android:src="@drawable/ic_add_blue"
            bind:visibilityAnim="@{viewModel.isBottomNavigationShow ? View.VISIBLE : View.GONE}"
            />
    </android.support.design.widget.CoordinatorLayout>
</layout>
