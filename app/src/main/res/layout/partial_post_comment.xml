<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="msgError"
            type="java.lang.String"/>

        <variable
            name="presenter"
            type="com.framgia.fpoll.ui.votemanager.information.VoteInformationPresenter"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        app:cardBackgroundColor="@color/color_grey_200"
        app:cardElevation="@dimen/dp_8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_name"
                style="@style/TextViewPollInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@drawable/bg_edit_text"
                android:hint="@string/hint_enter_name"
                android:inputType="text"
                android:maxLines="1"
                android:padding="@dimen/dp_8"
                android:text="@={presenter.fpollComment.userName}"
                bind:setErrorEditText="@{msgError}"/>

            <EditText
                android:id="@+id/edit_comment"
                style="@style/TextViewPollInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@drawable/bg_edit_text"
                android:gravity="top|start"
                android:hint="@string/hint_enter_comment"
                android:inputType="textMultiLine"
                android:minHeight="@dimen/dp_48"
                android:padding="@dimen/dp_8"
                android:text="@={presenter.fpollComment.content}"
                bind:setErrorEditText="@{msgError}"/>

            <Button
                style="@style/ButtonInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_8"
                android:onClick="@{() -> presenter.postComment()}"
                android:text="@string/action_post_comment"
                android:textAllCaps="false"
                android:textColor="@color/color_white"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>
