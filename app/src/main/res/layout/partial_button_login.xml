<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="typeLogin"
            type="com.framgia.fpoll.data.enums.LoginType"/>

        <variable
            name="handler"
            type="com.framgia.fpoll.ui.login.LoginActionHandler"/>

        <variable
            name="titleLogin"
            type="java.lang.String"/>

        <variable
            name="imageButton"
            type="android.graphics.drawable.Drawable"/>

        <variable
            name="colorButton"
            type="java.lang.Integer"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:onClick="@{()->handler.clickLogin(typeLogin)}"
        app:cardCornerRadius="@dimen/dp_2"
        app:cardElevation="@dimen/dp_1"
        app:cardUseCompatPadding="true"
        bind:background="@{colorButton}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/dp_8"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_8"
                bind:imageResource="@{imageButton}"/>

            <include layout="@layout/partial_line"/>

            <TextView
                android:id="@+id/text_facebook"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:text="@{titleLogin}"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp_20"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>
