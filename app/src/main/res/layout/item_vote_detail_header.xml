<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View"/>

        <variable
            name="presenter"
            type="com.framgia.fpoll.ui.votemanager.votedetail.VoteDetailPresenter"/>

        <variable
            name="option"
            type="com.framgia.fpoll.data.model.poll.Option"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:text="@{@string/text_vote_detail_header(String.valueOf(option.votes.size()),String.valueOf(option.participantVotes.size()))}"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:text="@string/text_public_vote_profile"
            android:visibility="@{presenter.getListProfile(option).size() > 1 ? View.VISIBLE : View.GONE}"/>

    </LinearLayout>

</layout>
