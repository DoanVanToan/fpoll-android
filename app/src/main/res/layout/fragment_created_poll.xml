<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="fragment"
            type="com.framgia.fpoll.ui.poll.PollCreatedFragment"/>

        <variable
            name="handler"
            type="com.framgia.fpoll.ui.poll.PollCreatedHandlerAction"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:orientation="vertical"
            android:padding="@dimen/dp_5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/msg_thank_user"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_30"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{fragment.item.username}"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_30"/>
            </LinearLayout>

            <TextView
                android:id="@+id/text_poll_created"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/msg_poll_created"
                android:textColor="@color/color_black_700"
                android:textSize="@dimen/sp_20"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/msg_send_email_information_poll"
                android:textColor="@color/color_black_700"
                android:textSize="@dimen/sp_17"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{fragment.item.email}"
                android:textColor="@color/color_black_700"
                android:textSize="@dimen/sp_20"/>
            
            <TextView
                style="@style/TextViewStatusPoll"
                android:onClick="@{() -> handler.reSendEmail()}"
                android:text="@string/msg_click_send_email"
                android:textColor="@color/color_blue"
                android:textSize="@dimen/sp_17"/>

            <TextView
                style="@style/TextViewStatusPoll"
                android:text="@string/msg_participation"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_17"/>

            <TextView
                style="@style/TextViewStatusPoll"
                android:text="@string/msg_send_link"
                android:textColor="@color/color_black_700"
                android:textSize="@dimen/sp_17"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@{fragment.item.link}"
                    android:textColor="@color/color_blue"
                    android:textSize="@dimen/sp_17"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/color_tit_register"
                    android:gravity="center"
                    android:onClick="@{() -> handler.copyLink()}"
                    android:text="@string/title_copy_link"
                    android:textAllCaps="false"
                    android:textColor="@color/color_white"/>
            </LinearLayout>

            <TextView
                style="@style/TextViewStatusPoll"
                android:text="@string/msg_administration_link"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_20"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:onClick="@{() -> handler.viewManagerPoll(fragment.item.idPoll)}"
                android:text="@string/title_admin_screen"
                android:textColor="@color/color_blue"
                android:textSize="@dimen/sp_17"/>
        </LinearLayout>
    </LinearLayout>
</layout>
