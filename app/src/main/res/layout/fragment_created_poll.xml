<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="fragment"
            type="com.framgia.fpoll.ui.poll.PollCreatedFragment"/>

        <variable
            name="handler"
            type="com.framgia.fpoll.ui.poll.PollCreatedHandler"/>
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="vertical"
        android:padding="@dimen/dp_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/msg_thank_user(fragment.item.username)}"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_25"/>


        <TextView
            android:id="@+id/text_poll_created"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/msg_poll_created"
            android:textColor="@color/color_black_700"
            android:textSize="@dimen/sp_20"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/msg_send_email_information_poll(fragment.item.email)}"
            android:textColor="@color/color_black_700"
            android:textSize="@dimen/sp_17"/>


        <TextView
            style="@style/TextViewStatusPoll"
            android:onClick="@{() -> handler.reSendEmail()}"
            android:text="@string/msg_click_send_email"
            android:textColor="@color/color_blue"
            android:textSize="@dimen/sp_17"/>

        <TextView
            style="@style/TextViewStatusPoll"
            android:text="@string/msg_participation"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_17"/>

        <TextView
            style="@style/TextViewStatusPoll"
            android:text="@string/msg_send_link"
            android:textColor="@color/color_black_700"
            android:textSize="@dimen/sp_17"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:onClick="@{()->handler.clickViewInvite(fragment.item.link)}"
                android:text="@{fragment.item.link}"
                android:textColor="@color/color_blue"
                android:textSize="@dimen/sp_17"/>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:onClick="@{() -> handler.copyLinkInvite()}"
                app:cardBackgroundColor="@color/color_teal_800">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp_8"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:paddingTop="@dimen/dp_8"
                    android:text="@string/title_copy_link"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/sp_20"/>
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <TextView
            style="@style/TextViewStatusPoll"
            android:text="@string/msg_administration_link"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_20"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:onClick="@{() -> handler.viewManagerPoll(fragment.item.idPoll)}"
                android:text="@{fragment.item.link}"
                android:textColor="@color/color_blue"
                android:textSize="@dimen/sp_17"/>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:onClick="@{() -> handler.copyLinkManager()}"
                app:cardBackgroundColor="@color/color_teal_800">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp_8"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:paddingTop="@dimen/dp_8"
                    android:text="@string/title_copy_link"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/sp_20"/>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</layout>
