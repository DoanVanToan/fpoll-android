<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="handler"
            type="com.framgia.fpoll.ui.pollcreation.option.OptionHandler"/>

        <variable
            name="presenter"
            type="com.framgia.fpoll.ui.pollcreation.option.OptionPresenter"/>

        <variable
            name="fragment"
            type="com.framgia.fpoll.ui.pollcreation.option.OptionPollFragment"/>

        <import type="com.framgia.fpoll.util.LayoutManageUtil"/>

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp_16">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:bindAdapter="@{fragment.adapter}"
            app:layoutManager="@{LayoutManageUtil.linear()}"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8">

            <android.support.v7.widget.CardView
                android:id="@+id/card_previous"
                style="@style/FPollCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> handler. previousStep()}">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/FPollTextCardView"
                    android:text="@string/action_previous"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_continue"
                style="@style/FPollCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:onClick="@{() -> handler. nextStep()}">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/FPollTextCardView"
                    android:text="@string/action_continue"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_finish"
                style="@style/FPollCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_toLeftOf="@id/card_continue"
                android:layout_toStartOf="@id/card_continue">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/FPollTextCardView"
                    android:text="@string/action_finish"/>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </LinearLayout>
</layout>
