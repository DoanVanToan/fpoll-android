<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="information"
            type="com.framgia.fpoll.data.ApiRestClient.APIService.pollmanager.DataInfoItem"/>

        <variable
            name="handler"
            type="com.framgia.fpoll.ui.pollmanage.information.PollInformationHandler"/>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_16"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatButton
                    style="@style/ButtonInfo"
                    android:onClick="@{()->handler.clickLinkVote()}"
                    android:text="@string/title_link_vote"/>

                <android.support.v7.widget.AppCompatButton
                    style="@style/ButtonInfo"
                    android:onClick="@{()->handler.clickViewOption()}"
                    android:text="@string/title_view_option"/>

                <android.support.v7.widget.AppCompatButton
                    style="@style/ButtonInfo"
                    android:onClick="@{()->handler.clickViewSetting()}"
                    android:text="@string/title_view_setting"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="@dimen/dp_4"
                android:text="@{information.poll.status ? @string/title_poll_open : @string/title_poll_close}"
                android:textColor="@color/color_blued"/>

            <LinearLayout
                style="@style/LayoutManagerPoll">

                <ImageView
                    style="@style/ImageViewLogin"
                    android:src="@drawable/ic_email_white_24px"/>

                <include layout="@layout/partial_line"/>

                <EditText
                    style="@style/EditTextLogin"
                    android:inputType="textEmailAddress"
                    android:text="@={information.poll.email}"/>

            </LinearLayout>

            <LinearLayout style="@style/LayoutManagerPoll">

                <ImageView
                    style="@style/ImageViewLogin"
                    android:src="@drawable/ic_person_black_24dp"/>

                <include layout="@layout/partial_line"/>

                <EditText
                    style="@style/EditTextManagerPoll"
                    android:inputType="text"
                    android:text="@={information.poll.name}"/>

            </LinearLayout>

            <LinearLayout style="@style/LayoutManagerPoll">

                <ImageView
                    style="@style/ImageViewLogin"
                    android:src="@drawable/ic_title"/>

                <include layout="@layout/partial_line"/>

                <EditText
                    style="@style/EditTextManagerPoll"
                    android:text="@={information.poll.title}"/>

            </LinearLayout>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight="0.18"
                android:background="@drawable/bg_edit_text"
                android:entries="@array/num_answer"
                bind:numAnswer="@{information.poll.multiple}"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/bg_edit_text"
                android:hint="@string/title_description_poll"
                android:padding="@dimen/dp_10"
                android:text="@={information.poll.description}"
                android:textSize="@dimen/sp_17"/>

            <LinearLayout style="@style/LayoutManagerPoll">

                <ImageView
                    style="@style/ImageViewLogin"
                    android:src="@drawable/ic_alarm_black_24px"/>

                <include layout="@layout/partial_line"/>

                <EditText
                    style="@style/EditTextLogin"
                    android:hint="@string/title_time_close_poll"
                    android:inputType="datetime"
                    android:text="@={information.poll.createdAt}"/>

            </LinearLayout>

            <LinearLayout style="@style/LayoutManagerPoll">

                <ImageView
                    style="@style/ImageViewLogin"
                    android:src="@drawable/ic_location_on_black_24px"/>

                <include layout="@layout/partial_line"/>

                <EditText
                    style="@style/EditTextLogin"
                    android:hint="@string/title_location"
                    android:inputType="text"
                    android:text="@{information.poll.location}"/>

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/color_teal_500"
                android:text="@string/title_save_data"
                android:textAllCaps="false"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp_17"/>

        </LinearLayout>
    </ScrollView>
</layout>
