<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="option"
            type="com.framgia.fpoll.data.model.poll.Option"/>

        <variable
            name="presenter"
            type="com.framgia.fpoll.ui.votemanager.result.LinkVoteResultPresenter"/>
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/dp_48"
        android:onClick="@{()->presenter.openVoteDetail(option)}"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:ellipsize="end"
            android:lines="2"
            android:text="@{option.name}"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_circle_textview"
            android:gravity="center"
            android:minHeight="@dimen/dp_30"
            android:minWidth="@dimen/dp_30"
            android:padding="@dimen/dp_4"
            android:text="@{String.valueOf(option.participantVotes.size() + option.votes.size())}"
            android:textColor="@color/color_white"/>

    </LinearLayout>

</layout>
