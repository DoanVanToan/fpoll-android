<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="optionModel"
            type="com.framgia.fpoll.ui.votemanager.itemmodel.OptionModel"/>

        <variable
            name="presenter"
            type="com.framgia.fpoll.ui.votemanager.vote.VotePresenter"/>

        <import type="java.lang.String"/>

        <import type="android.view.View"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="@dimen/dp_48"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="@{optionModel.checked}"
            android:clickable="false"
            android:onClick="@{()->presenter.voteOption(optionModel)}"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center|left"
            android:lines="2"
            android:text="@{optionModel.option.name}"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_circle_textview"
            android:gravity="center"
            android:minHeight="@dimen/dp_30"
            android:minWidth="@dimen/dp_30"
            android:padding="@dimen/dp_4"
            android:text="@{String.valueOf(optionModel.option.participantVotes.size() + optionModel.option.votes.size())}"
            android:textColor="@color/color_white"/>

    </LinearLayout>
</layout>
