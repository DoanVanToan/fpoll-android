<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <LinearLayout
                style="@style/RegisterLayoutStyle">

                <ImageView
                    style="@style/RegisterImageViewStyle"
                    android:layout_margin="@dimen/dp_1"
                    android:background="@color/color_gray"
                    android:padding="@dimen/dp_10"
                    android:src="@drawable/ic_email_white_24px"/>

                <EditText
                    style="@style/RegisterEditTextStyle"
                    android:hint="@string/title_email"
                    android:inputType="textEmailAddress"/>

            </LinearLayout>

            <LinearLayout
                style="@style/RegisterLayoutStyle"
                android:padding="@dimen/dp_1">

                <ImageView
                    style="@style/RegisterImageViewStyle"
                    android:src="@drawable/ic_person_black_24dp"/>

                <EditText
                    style="@style/RegisterEditTextStyle"
                    android:hint="@string/title_username"/>
            </LinearLayout>

            <LinearLayout
                style="@style/RegisterLayoutStyle"
                android:padding="@dimen/dp_1">

                <ImageView
                    style="@style/RegisterImageViewStyle"
                    android:src="@drawable/ic_male"/>

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"/>
            </LinearLayout>

            <LinearLayout
                style="@style/RegisterLayoutStyle"
                android:padding="@dimen/dp_1">

                <ImageView
                    style="@style/RegisterImageViewStyle"
                    android:src="@drawable/ic_vpn_key_white_24px"/>


                <EditText
                    style="@style/RegisterEditTextStyle"
                    android:hint="@string/title_password"
                    android:inputType="textPassword"/>
            </LinearLayout>

            <LinearLayout
                style="@style/RegisterLayoutStyle"
                android:padding="@dimen/dp_1">

                <ImageView
                    style="@style/RegisterImageViewStyle"
                    android:src="@drawable/ic_vpn_key_white_24px"/>

                <EditText
                    style="@style/RegisterEditTextStyle"
                    android:hint="@string/action_confirm_password"
                    android:inputType="textPassword"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_margin="@dimen/dp_5"
                android:background="@drawable/bg_edit_text"
                android:padding="@dimen/dp_5"
                android:src="@drawable/ic_insert_photo_black_24px"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:background="@color/color_tit_register"
                android:text="@string/action_register"
                android:textAllCaps="false"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/action_login"
                android:textColor="@color/color_blued"
                android:textSize="@dimen/sp_17"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/action_forgot_password"
                android:textColor="@color/color_blued"
                android:textSize="@dimen/sp_17"/>
        </LinearLayout>
    </LinearLayout>
</layout>
